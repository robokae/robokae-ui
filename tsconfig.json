{
    "compilerOptions": {
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.test.*",
        "src/**/*.stories.*"
    ]
}